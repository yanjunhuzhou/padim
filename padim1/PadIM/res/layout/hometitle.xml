<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/screen" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:layout_margin="0px"
	android:padding="0px" android:orientation="vertical">
	<Button android:paddingLeft="6dip" android:paddingRight="6dip"
		android:minWidth="50dip" android:id="@+id/left_button"
		android:layout_width="wrap_content" android:textColor="@color/white"
		android:textSize="@dimen/title_left_right_textsize"
		android:background="@drawable/home_title_btn_bg"
		android:layout_marginLeft="8px" android:layout_height="fill_parent"
		android:layout_marginTop="4px" android:layout_marginBottom="4px"
		android:gravity="center" android:layout_alignParentLeft="true" />

	<TextView android:id="@+id/mid_text" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:text="title"
		android:textSize="@dimen/title_mid_textsize" android:singleLine="true"
		android:layout_centerInParent="true" android:textColor="@color/white"
		android:textAppearance="@android:style/TextAppearance.WindowTitle" />
	<Button android:id="@+id/right_button" android:paddingLeft="6dip"
		android:paddingRight="6dip" android:layout_width="wrap_content"
		android:minWidth="50dip" android:background="@drawable/home_title_btn_bg"
		android:layout_marginRight="8px" android:layout_height="fill_parent"
		android:layout_marginTop="4px" android:layout_marginBottom="4px"
		android:gravity="center" android:textColor="@color/white"
		android:textSize="@dimen/title_left_right_textsize"
		android:layout_alignParentRight="true" />


</RelativeLayout>
